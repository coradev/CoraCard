@model EFDataAccess.EF.Social

@{
    ViewBag.Title = "Delete";
    ViewBag.BLOGTITLE = "socialmanager";
}
<style>
    .img {
        width: 50px;
        height: 50px;
        border-radius: 999px;
    }

    .table .thead-dark th {
        color: #fff;
        background-color: #343a40;
        border-color: #454d55;
    }

    td, tr th {
        vertical-align: middle;
    }

    .btn-custom {
        line-height: .5;
    }

    .btn-label {
        position: relative;
        left: -12px;
        display: inline-block;
        padding: 6px 12px;
        background: rgba(0, 0, 0, 0.15);
        border-radius: 3px 0 0 3px;
    }

    .btn-labeled {
        padding-top: 0;
        padding-bottom: 0;
    }
</style>

<div class="container-fluid px-4">
    <div class="row justify-content-center">
        <div class="col-lg-4">
            <div class="card shadow border-0 rounded-lg mt-5">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">Delete Social</h3>
                </div>

                <div class="card-body">
                    <h5>
                        Are you sure you want to delete <span style="color:red">@Html.DisplayFor(model => model.NAME)</span>?
                    </h5>
                    <img src="~/Upload/Image/Icon/@Html.DisplayFor(model => model.IMAGE)" class="img img-thumbnail">
                    <a href="@Html.DisplayFor(model => model.LINK)" target="_blank" class="btn btn-labeled btn-success btn-custom">
                        <span class="btn-label"><i class="fa fa-eye"></i></span><span class="text-link">View</span>
                    </a>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="d-flex align-items-center justify-content-between">
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "small text-success" })

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>