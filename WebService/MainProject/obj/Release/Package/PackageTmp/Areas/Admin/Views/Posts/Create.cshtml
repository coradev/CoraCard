@model MainProject.Models.PostModel

@{
    ViewBag.Title = "Create Post";
}
<style>
    .container {
        max-width: 90%;
        margin-top: 2rem;
    }
</style>
@Styles.Render("~/Css/richtext")
<div class="mb-5">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group mb-4">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PostTitle, new { htmlAttributes = new { @class = "form-control", @placeholder = "Post title" } })
                    @Html.ValidationMessageFor(model => model.PostTitle, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group mb-4">
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.PostContent, new { @class = "form-control content" })
                    @Html.ValidationMessageFor(model => model.PostContent, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group mb-4">
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.PostDesc, new { @class = "form-control", @rows = "6", @placeholder = "Description" })
                    @Html.ValidationMessageFor(model => model.PostDesc, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-offset-2 col-md-2">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
</div>