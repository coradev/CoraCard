@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
    MainProject.Common.UserLogin userLogin = (MainProject.Common.UserLogin)Session[MainProject.Common.CMConst.USER_SESSION];
}

@if (userLogin == null)
{
    <p class="lead">
        <a href="@Url.Action("", "register")" class="btn btn-lg btn-secondary">TAKE CARD NOW</a>
        <a href="@Url.Action("", "card", new { area = "" })" class="btn btn-lg btn-warning text-white">VIEW DEMO CARD</a>
    </p>
}
else
{
    <p class="lead">
        <a href="@Url.Action("", "Socials", new { area = "Profile" })" class="btn btn-lg btn-secondary">EDIT PROFILE</a>
        <a href="@Url.Action("", "card", new { area = "" })" class="btn btn-lg btn-warning text-white">VIEW YOUR CARD</a>
    </p>
}

