@{
    Layout = null;
}
@model EFDataAccess.EF.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" sizes="32x32" href="~/Upload/Image/Icon/DemoIcon/default.png">
    <base href="/" />
    @Styles.Render("~/Css/profile")
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <style>
        ::-webkit-scrollbar {
            width: 10px;
        }

        ::-webkit-scrollbar-track-piece {
            background-color: #FFF;
        }

        ::-webkit-scrollbar-thumb {
            background-color: #CBCBCB;
            outline: 2px solid #FFF;
            outline-offset: -2px;
            border: .1px solid #B7B7B7;
        }

            ::-webkit-scrollbar-thumb:hover {
                background-color: #909090;
            }
    </style>
    <title>@Html.DisplayFor(model => model.FULLNAME)</title>
</head>
<body>
    <div class="profile">

        <!-- INFORMATION SECTION -->
        <div class="profile-info">
            <div class="profile-info__flex">
                <img src="upload/image/avatar/@Html.DisplayFor(model => model.AVATAR)" alt="" class="info-image boder-beauty">
                <div class="info-detail">
                    <div class="info-detail__name">@Html.DisplayFor(model => model.FULLNAME) <img src="~/Assets/img/check.svg" class="blue-tick" /> </div>
                    <div class="info-detail__description">@Html.DisplayFor(model => model.BIOGRAPHY)</div>
                    <div class="info-detail__addcontact">
                        <a href="http://example.com/file.vcf" target="_blank" class="button">Thêm vào danh bạ</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- END INFORMATION SECTION -->
        <!-- SOCIAL MEDIA SECTION -->
        <div class="profile-social" style="display: block;">
            @foreach (var social in Model.Socials)
            {
                <a href="@social.LINK" target="_blank" class="social-item border-t-3 border-black">
                    <div class="item-center__flex">
                        <img src="upload/image/icon/@social.IMAGE" alt="" class="social-image">
                        <div class="social-name">@social.NAME</div>
                    </div>
                </a>
            }

        </div>
        <!-- END SOCIAL MEDIA SECTION -->
        <!-- FOOTER SECTION -->
        <div class="profile-footer">
            <div class="footer-logo__center">
                <div class="logo-text">
                    CoraCard
                </div>
            </div>
            <div class="footer-text__center">
                <div class="text-item">
                    Thẻ thông minh <a href="#" class="text-item__link">CoraCard</a>
                </div>
                <div class="text-item">
                    Thẻ cá nhân thông minh tại Việt Nam
                </div>
            </div>
        </div>
        <!-- END FOOTER SECTION -->
    </div>
    <script>
        $("body").on("contextmenu", function (e) {
            return false;
        });
        $("img").mousedown(function (e) {
            e.preventDefault()
        });
    </script>
</body>
</html>