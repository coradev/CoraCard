@model EFDataAccess.Models.ChangePasswordModel

@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-5" role="alert">
        @ViewBag.Message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@using (Html.BeginForm("ChangePassword", "Info", FormMethod.Post, new { area = "Profile" }))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="form-floating mb-3">
        @Html.TextBoxFor(model => model.OldPassword, new { @class = "form-control bg-dark text-white", @id = "oldPass", @placeholder = "Old Password" })
        <label for="oldPass">Old Password</label>
    </div>
    <div class="form-floating mb-3">
        @Html.TextBoxFor(model => model.NewPassword, new { @class = "form-control bg-dark text-white", @id = "inputPassword", @placeholder = "New Password", @type = "password" })
        <label for="inputPassword">New Password</label>
    </div>
    <div class="d-flex align-items-center justify-content-around mt-4 mb-0">
        <p class="lead">
            <button class="btn btn-lg btn-secondary" type="submit">Change now</button>
        </p>
    </div>
}
